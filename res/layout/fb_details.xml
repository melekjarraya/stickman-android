<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10.0dip" android:src="@drawable/facebook" />
    
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Title" />
    <EditText android:gravity="top" android:id="@+id/fb_title" android:layout_width="fill_parent" android:layout_height="wrap_content" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Comment" />
    <EditText android:gravity="top" android:id="@+id/fb_description" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="2" />
    
    <LinearLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:layout_gravity="bottom" android:id="@+id/fb_upload" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upload_btn" />
        <Button android:layout_gravity="bottom" android:id="@+id/fb_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/close_btn" />
    </LinearLayout>
</LinearLayout>